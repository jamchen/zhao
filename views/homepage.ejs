<h1>Using Passport With Sails</h1>

<% if (req.user) { %>
	<h2>Hello <%=req.user.username%></h2>
	<pre><%=JSON.stringify(req.user,0,4)%></pre>
	<% if (req.user.profilePicture) { %>
		<p><img src="<%=req.user.profilePicture%>"></p>
	<% } %>
	<a href="/logout">Logout</a>
<% } else { %>
<a href="/auth/facebook">Login</a>
<% } %>