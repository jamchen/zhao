<div class ="row">
	<div class ="row">
		<div class="col s12 m6">
			<h3><%= missingPet.name %>走丟了，請幫我找找</h3>
		</div>
		<div class="col s12 m6 right-align record-info">
			<p><small>刊登日期：<%= moment(missingPet.createdAt).calendar() %></small></p>
			<p><small>最後修改日期：<%= moment(missingPet.updatedAt).calendar() %></small></p>	
			<p><small>協尋編號：<%= missingPet.id %></small></p>
		</div>
	</div>
	<div class="divider"></div>
	<div class ="row">
		<div class="col s12 m6">
			&nbsp; <!-- put this &nbsp; to pre-allocate space (columns in grid system) for img element -->
			<img class="materialboxed" width="100%" src="<%= missingPet.mainPictureUrl %>" data-caption="<%= missingPet.name %>">
		</div>
		<div class="col s12 m6">
			<div class="section pet-info">
				<h5>寵物資訊</h5>
				<% 
					var infos = ['name', 'kind', 'color', 'location', 'missingDate', 'gender', 'breed', 'weight', 'age'];
					_.forEach(infos, function addInfoItem(infoKey) {
						%>
						<div class="row">
							<div class="info-header">
							<strong><%= i18n(infoKey) %></strong>
							</div>
							<div class="info-value">
								<% if ('missingDate' === infoKey) { %>
									<%= moment(missingPet[infoKey]).calendar() %>
								<% } else { %>
									<%= missingPet[infoKey] %>

								<% } %>
							</div>
						</div>
						<%
					});
				%>
				<h6>其他資訊：</h6>
				<div class="row">
					<div class="chip">
						<%= missingPet.neuter?'已結紮':'尚未結紮' %>
					</div>
					<div class="chip">
						<%= missingPet.hasMicrochip?'有植晶片':'沒有植晶片' %>
					</div>
					<div class="chip">
						<%= missingPet.hasCollar?'有佩戴項圈':'無佩戴項圈' %>
					</div>
				</div>
				<div class="right-align">
				</div>
			</div>
		</div>
	</div>

	<div class="divider"></div>
	<div class="section">		
		<div class="col s12">
			<p class="flow-text"><%= missingPet.description %></p>
		</div>
	</div>
</div>
